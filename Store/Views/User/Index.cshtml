@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User List</h1>
<p>
    <a asp-action="Create">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@user.Id">Edit</a>
                    <a asp-action="Delete" asp-route-userId="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

